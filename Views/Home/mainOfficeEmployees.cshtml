@{
    ViewData["Title"] = "ABC Corporation Staff";
    string[] staff = { "Freddie Flintstone", "Barney Rubble", "Betty Rubble", "Wilma Flintstone" };
    int staffLen = staff.Length;
    string[] managers = { "Pebbles Flintstone", "Johnny Quest", "Shaggy Rogers" };
    int managerLen = managers.Length;
    string[] officers = { "Scooby Doo", "Astro Jetson", "Scrappy Doo" };
    int officerLen = officers.Length;
    var x = 0;
}
<hr />
<div class="jumbotron bg-success text-white row">
    <h1 class="col-sm-8">Meet the Team!</h1>
    <img src="~/Images/detectives.jpg" alt="xyz detectives" class="float-right rounded-circle mt-0 img-fluid col-sm-4" style="box-shadow:1px 1px black;" />
</div>
<table class="table bg-white text-dark table-striped">
    <tr><th><h2><i class='fas fa-biohazard' style='font-size:48px;color:red'></i>XYZ Detective Agency Staff<i class='fas fa-biohazard' style='font-size:48px;color:red'></i></h2></th></tr>
    @for (x = 0; x < staffLen; x++)
    {
        <tr><td>@staff[x]</td></tr>
    }
</table>
<hr />

<table class="table-light text-uppercase text-dark table-bordered">
    <tr><th><h2><i class='fas fa-biohazard' style='font-size:48px;color:red'></i>XYZ Detective Agency Managers<i class='fas fa-biohazard' style='font-size:48px;color:red'></i></h2></th></tr>
    @foreach (var person in managers)
    {
        <tr><td>@person</td></tr>
    }
</table>
<hr />
<table class="table-bordered table-hover">
    <tr><td><h2><i class='fas fa-biohazard' style='font-size:48px;color:red'></i>XYZ Detective Agency Corporate Office<i class='fas fa-biohazard' style='font-size:48px;color:red'></i></h2></td></tr>
    @{
        x = 0;
        while (x < officerLen)
        {
            <tr><td>@officers[x]</td></tr>
            x += 1;
        }
    }
</table>
<hr />